<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ramayana"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biblebg"
    tools:context="com.atmas.saneesh.atma.Bible.Bible">

    <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/biblecustom_button"
            android:text="THE BIBLE - PART1"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/biblecustom_button"
            android:text="THE BIBLE - PART2"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/biblecustom_button"
            android:text="THE BIBLE - PART3"
            android:textStyle="bold"

            />


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/BANNERID"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
