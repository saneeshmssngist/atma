<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ramayana"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ramayanbg"
    tools:context="com.atmas.saneesh.atma.Ramayana.Ramayana">

    <include layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:gravity="center"
        >

    <Button
        android:id="@+id/btn1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:text="SHORT SUMMARY"
        android:textStyle="bold"
        />

        <Button
            android:id="@+id/btn2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ripple"
            android:text="LONG SUMMARY"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ripple"
            android:text="VIDEO CLIPS"
            android:textStyle="bold"
            />



    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/BANNERID"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
